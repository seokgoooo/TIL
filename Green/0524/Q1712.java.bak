import java.util.Scanner;
public class Q1712 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a = sc.nextInt();
		int b = sc.nextInt();
		int c = sc.nextInt();
		
		boolean x = true;
		boolean y = false;
		int i = 1;
		int A = a + (b * i);
		int B = c * i;
		
		while (x) {
			
			if (A < B) {
				x = y;
				System.out.print(i);
			} else {
				System.out.print(-1);
			}
			i++;
		}
	}
}